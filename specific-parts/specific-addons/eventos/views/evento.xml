<odoo>
<data>
    <!-- Views -->
    <record model="ir.ui.view" id="evento_calendar_view">
      <field name="name">evento.calendar</field>
      <field name="model">evento</field>
      <field name="arch" type="xml">
        <calendar quick_add="false"
                  date_start="data"
                  mode="month"
                  color="state">
          <field name="name"/>
        </calendar>
      </field>
    </record>

    <record model="ir.ui.view" id="evento_form_view">
        <field name="name">evento.form (in eventos)</field>
        <field name="model">evento</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="confirmar_evento" type="object" string="Confirmar"
                            states="provisorio"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="publico_alvo"/>
                        <field name="tematica"/>
                    </group>
                    <group>
                        <group string="Data e Duração">
                            <field name="data"/>
                            <field name="horario_inicio" widget="float_time"/>
                            <field name="horario_termino" widget="float_time"/>
                        </group>
                        <group string="Espaços">
                            <field name="abre_pista"/>
                            <field name="abre_cultural"/>
                            <field name="abre_rancho"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pista"
                              attrs="{'invisible': [('abre_pista', '=', False)]}">
                            <field name="atracao_pista_ids"
                                   context="{'default_local': 'pista',
                                             'default_festa_id': active_id}"
                                   domain="[('local', '=', 'pista')]"/>
                        </page>
                        <page string="Cultural"
                              attrs="{'invisible': [('abre_cultural', '=', False)]}">
                            <field name="atracao_cultural_ids"
                                   context="{'default_local': 'cultural',
                                             'default_festa_id': active_id}"
                                   domain="[('local', '=', 'cultural')]"/>
                        </page>
                        <page string="Rancho"
                              attrs="{'invisible': [('abre_rancho', '=', False)]}">
                            <field name="atracao_rancho_ids"
                                   context="{'default_local': 'rancho',
                                             'default_festa_id': active_id}"
                                   domain="[('local', '=', 'rancho')]"/>
                        </page>
                        <page string="Promoções">
                            <field name="promocao"/>
                        </page>
                        <page string="Decoração">
                            <field name="decoracao"/>
                        </page>
                        <page string="Detalhes">
                            <group>
                                <group string="Responsáveis">
                                    <field name="responsaveis" widget="many2many_tags"/>
                                    <field name="ouvidoria_ids" widget="many2many_tags"/>
                                    <field name="fotografo"/>
                                </group>
                                <group string="Portaria">
                                    <field name="portaria_socio"/>
                                    <field name="portaria_estudante"/>
                                    <field name="portaria_nao_estudante"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <group>
                            <field name="custo_total"/>
                        </group>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="atracao_tree_view">
        <field name="name">atracao.tree</field>
        <field name="model">atracao</field>
        <field name="arch" type="xml">
            <tree>
                <field name="artista_id"/>
                <field name="tipo_artista"/>
                <field name="estilo_musical"/>
                <field name="local"/>
                <field name="horario_inicio" widget="float_time"/>
                <field name="horario_termino" widget="float_time"/>
                <field name="cache"/>
                <field name="lanches"/>
                <field name="cortesias"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="atracao_form_view">
        <field name="name">atracao.form</field>
        <field name="model">atracao</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="festa_id"/>
                        <group>
                            <field name="artista_id"/>
                        </group>
                        <group>
                            <field name="cache"/>
                            <field name="data_extra_combinada"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="tipo_artista"/>
                            <field name="estilo_musical"/>
                            <field name="local"/>
                        </group>
                        <group>
                            <field name="data"/>
                            <field name="horario_inicio" widget="float_time"/>
                            <field name="horario_termino" widget="float_time"/>
                        </group>
                    </group>
                    <group>
                        <field name="responsavel_id"/>
                        <field name="lanches"/>
                        <field name="cortesias"/>
                        <field name="consumacao"/>
                        <field name="detalhes_consumacao"
                               attrs="{'invisible': [('consumacao', '=', 'padrao')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="artista_form_view">
        <field name="name">artista.form</field>
        <field name="model">artista</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <group>
                            <field name="tipo"/>
                        </group>
                        <group>
                            <field name="estilo_musical"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="integrantes"/>
                            <field name="cortesias"/>
                        </group>
                        <group>
                            <field name="contato"/>
                            <field name="nome_contato"/>
                            <field name="tipo_contato"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Apresentações:">
                            <field name="apresentacao_ids" readonly="True">
                                <tree>
                                    <field name="festa_id"/>
                                    <field name="local"/>
                                    <field name="horario_inicio" widget="float_time"/>
                                    <field name="horario_termino" widget="float_time"/>
                                    <field name="cache"/>
                                    <field name="lanches"/>
                                    <field name="cortesias"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="artista_tree_view">
        <field name="name">artista.tree</field>
        <field name="model">artista</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="tipo"/>
                <field name="estilo_musical"/>
                <field name="integrantes"/>
                <field name="cortesias"/>
                <field name="contato"/>
                <field name="nome_contato"/>
                <field name="tipo_contato"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="responsavel_form_view">
        <field name="name">responsavel.form</field>
        <field name="model">responsavel</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sexo"/>
                        <field name="eventos_responsavel" widget="many2many_tags"/>
                        <field name="eventos_ouvidoria" widget="many2many_tags"
                               attrs="{'invisible': [('sexo', '=', 'masculino')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="responsavel_tree_view">
        <field name="name">responsavel.tree</field>
        <field name="model">responsavel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sexo"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="evento_tree_view">
        <field name="name">evento.tree</field>
        <field name="model">evento</field>
        <field name="arch" type="xml">
            <tree string="Festas">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="calendario_action">
        <field name="name">Calendário</field>
        <field name="res_model">evento</field>
        <field name="view_mode">calendar,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window" id="lista_artistas_action">
        <field name="name">Artistas</field>
        <field name="res_model">artista</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window" id="lista_responsaveis_action">
        <field name="name">Responsáveis</field>
        <field name="res_model">responsavel</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem name="Eventos" id="menu_eventos"/>

    <menuitem name="Planejamento" id="planejamento_eventos" parent="menu_eventos"/>

    <menuitem name="Calendário" id="calendario_eventos" parent="planejamento_eventos"
              action="calendario_action"/>

    <menuitem name="Artistas" id="lista_artistas" parent="planejamento_eventos"
              action="lista_artistas_action"/>

    <menuitem name="Responsáveis" id="lista_responsaveis" parent="planejamento_eventos"
              action="lista_responsaveis_action"/>

</data>
</odoo>
